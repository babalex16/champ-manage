<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChampManage.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChampManage.MAUI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="MyTabBar">
        <Tab Title="News" Icon="news.png">
            <ShellContent 
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>
        <Tab Title="Events" Icon="trophy.png">
            <ShellContent 
                ContentTemplate="{DataTemplate local:Views.EventsPage}"
                Route="EventsPage"/>
        </Tab>
        <Tab Title="Settings" Icon="setting.png">
            <ShellContent 
                ContentTemplate="{DataTemplate local:Views.SettingsPage}"
                Route="SettingsPage"/>
        </Tab>
    </TabBar>
</Shell>
