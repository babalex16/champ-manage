<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChampManage.MAUI.Views.NewsDetailsPage"
             xmlns:viewmodel="clr-namespace:ChampManage.MAUI.ViewModels"
             x:DataType="viewmodel:NewsDetailsViewModel"
             Title="NewsDetailsPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="15" Margin="20">

        <Label Text="{Binding News.Title}" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="{Binding News.Text}" HorizontalOptions="Center" />

        <Label Text="{Binding News.DateOfArticle, StringFormat='{0:MMMM dd, yyyy}'}" HorizontalOptions="Center" FontAttributes="Italic"/>

    </StackLayout>
</ContentPage>
